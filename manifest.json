{
  "name": "Pomodoro-Extension",
  "version": "1.0",
  "description": "A chrome-extension that adds a pomodor timer that's linked with Toggl.",
  "permissions": ["declarativeContent","storage","background"],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    },
    "matches": ["<all_urls>"]
  },
  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  },
  "manifest_version": 2
}

